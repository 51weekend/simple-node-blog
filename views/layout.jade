doctype 5
html
  head
    block head
      title= title
      meta(charset="utf-8")
      link(rel='stylesheet', href='/bootstrap/css/bootstrap.css')
      script(type="text/javascript", src="/js/jquery.min.js")
      script(type="text/javascript", src="/bootstrap/js/bootstrap.js")
      link(rel='stylesheet', href='/css/main.css')

      link(rel='stylesheet', href='http://yandex.st/highlightjs/7.3/styles/default.min.css')
      script(type="text/javascript", src="http://yandex.st/highlightjs/7.3/highlight.min.js")

      meta(name="description", content="simple node blog")
      meta(name="keywords", content="simple node blog")

  body

    div#wrap
      div#header
        div.container
          div.login-toplink.pull-right
            - if (!userInfo.auth)
                a(href="/login/") Вход
            - else
                if (userInfo.role == 'admin')
                  &nbsp;
                  a(href="/adm/posts/", class="btn btn-mini m-r10") Управление
                !{userInfo.name} &nbsp;
                a(href="/logout/") Выход

          h2
            a(href='/') simple node blog

      div.container
        block content

      div#push

    div#footer
      div.container
        a(href="https://github.com/ijin82/simple-node-blog", target="_blank") &copy; simple node blog
        |&nbsp;
        span.label.label-info.site-a-label.label-inline
          a(href="/full-list/") Все записи

    include includes/metrika.html

    script(type="text/javascript")
      $('pre.code').each(function(i, e) {hljs.highlightBlock(e)});