extends layout

block content

  div
    div(style="padding: 15% 38%")
      form(method="post", class="form-inline", action="/auth/local",)
        div.control-group
          div.controls
            input(type="text", value="", name="username", placeholder="Ваш логин")
        div.control-group
          div.controls
            input(type="password", value="", name="password", placeholder="Ваш пароль")
        div.control-group
          div.controls
            button(type="submit", class="btn") Войти

            span.h-list.m-l10
              a(href="/auth/facebook", title="facebook", class="social-icon-link")
                i(class="icon-facebook-sign icon-2x")
              a(href="/auth/twitter", title="twitter", class="social-icon-link")
                i(class="icon-twitter-sign icon-2x")
              a(href="/auth/github", title="github", class="social-icon-link")
                i(class="icon-github icon-2x")
        - if (authErr == 'passport-error') {
            div.control-group
              label(class="label label-important") ошибка авторизации
        - }
      div.clearfix


