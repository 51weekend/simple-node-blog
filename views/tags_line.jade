div#tags_line
  - if (locals.tags_line_link) {
  -   tagLink = tags_line_link;
  - } else {
  -   tagLink = 'tag';
  - }
  - each tag in tags_line
    - if(tag_id && tag_id == tag.tag_id)
      span.label.label-info.site-a-label
        a.current(href="/#{tagLink}/#{tag.tag_id}/") #{tag.tag_name}
    - else
      span.label.site-a-label
        a(href="/#{tagLink}/#{tag.tag_id}/") #{tag.tag_name}
  div(class="clearfix")